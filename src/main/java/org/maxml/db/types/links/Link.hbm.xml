<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.maxml.db.types.links.Link" table="link_tbl">
    <id column="id" name="id" type="java.lang.Integer">
      <generator class="native"/>
    </id>
    
    <property column="referrerId" name="referrerId" type="java.lang.Integer"/>
    <property column="referrerType" name="referrerType" type="java.lang.Integer"/>
    <property column="referentId"   name="referentId" type="java.lang.Integer"/>
    <property column="referentType" name="referentType" type="java.lang.Integer"/>
    <property column="type" name="type" type="char"/>
    <property column="name" name="name" type="java.lang.String"/>

     
  </class>
</hibernate-mapping>
